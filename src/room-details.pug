extends template.pug

include blocks/info-appartment/info-appartment
include blocks/visitor-review/visitor-review
include blocks/pie-chart/pie-chart
include blocks/pie-chart-legend/pie-chart-legend
include blocks/appartments-finder-check/appartments-finder-check

block content
    - var text1 = "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару – никто не жаловался из соседей."
    - var text2 = "Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент."
    .content-room-details
        .room-details__fotos
            .room-details__fotos-left
                img(src = "images/cards/888_a.jpg" alt = "фото комнаты")
            .room-details__fotos-right
                img(src = "images/cards/888_b.jpg" alt = "фото комнаты")
                img(src = "images/cards/888_c.jpg" alt = "фото комнаты")
        .room-details__info
            main.room-details__info-left
                section.room-details__info-appartment
                    h2 Сведения о номере
                    +info-appartment("insert_emoticon", "Комфорт", "Шумопоглощающие стены")
                    +info-appartment("location_city", "Удобство", "Окно в каждой из спален")(type = "with border")
                    +info-appartment("whatshot", "Уют", "Номер оснащен камином")
                section.room-details__pie-chart
                    h2 Впечатления от номера
                    .room-details__pie-chart-graph
                        +pie-chart(25, 25, 50)
                        .room-details__pie-chart-graph-legend
                            +pie-chart-legend
                section.room-details__reviews
                    .room-details__reviews__title
                        h2 Отзывы посетителей номера
                        span= "2 отзыва"
                    +visitor-review ("_active", "images/users/1.png", "Мурад Сарафанов", "5 дней назад", "12", text1)
                    +visitor-review ("", "images/users/2.png", "Патрисия Стёклышкова", "Неделю назад", "2", text2)
                .room-details__additional
                    section.room-details__rules
                        h2 Правила
                        ul
                            li
                                div= "Нельзя с питомцами"
                            li 
                                div= "Без вечеринок и мероприятий"
                            li 
                                div= "Время прибытия — после 13:00, а выезд до 12:00"
                    section.room-details__cancel                    
                        h2 Отмена
                        = "Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги"
            aside.room-details__info-right
                +appartments-finder-check

