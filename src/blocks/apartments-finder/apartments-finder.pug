include ../datepicker/datepicker
include ../dropdown/dropdown
include ../button-with-arrow/button-with-arrow

mixin apartments-finder
    .apartments-finder
        form(action="changeme", method="post")
            h1.apartments-finder__title= "Найдём номера под ваши пожелания"
            .apartments-finder__datepicker
                +datepicker("прибытие", "выезд")(type = "two fields")
            .apartments-finder__dropdown
                +dropdown("гости", "Сколько гостей", "ВЗРОСЛЫЕ", "ДЕТИ", "МЛАДЕНЦЫ")(shadow = "none")
            button(type="submit").apartments-finder__button-with-arrow
                +button-with-arrow("подобрать номер")