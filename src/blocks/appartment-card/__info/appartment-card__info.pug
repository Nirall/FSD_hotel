mixin appartment-card__info(number, luxury="", price)
    - 
        var classMod = "appartment-card__info"
        if (attributes.type == "for-appartments-finder-check")
            classMod += " appartment-card__info_forCheck"
    div(class = classMod)
        .appartment-card__info-part
            span.appartment-card__info-number
                = "№"
                span.appartment-card__number= ` ${number}`
            span.appartment-card__info-luxury= ` ${luxury}`
        .appartment-card__info-part
            span.appartment-card__info-price= `${price}₽`
            span.appartment-card__info-price-dimension= " в сутки"