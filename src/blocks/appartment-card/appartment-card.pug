include ./__info/appartment-card__info
mixin appartment-card(img, number, luxury = "", price, stars = 0, reviews = 0)
    - 
        var classMod = "appartment-card"
        if (attributes.type == "common")
            classMod += " appartment-card_common"
    div(class = classMod)
        .appartment-card__img(style = `background: url(${img}) no-repeat;`)
            .appartment-card__img-arrows
                span.material-icons= "chevron_left"
                span.material-icons= "chevron_right"
            .appartment-card__img-spots
                .appartment-card__img-spot.appartment-card__img-spot_fill
                .appartment-card__img-spot
                .appartment-card__img-spot   
                .appartment-card__img-spot            
        +appartment-card__info(number, luxury, price)
        .appartment-card__rating
            .appartment-card__rating-stars
                if stars > 6
                    - stars = 5                    
                if stars < 0
                    - stars = 0                
                - let n = 0                
                while n < stars
                    - n++
                    span.material-icons.appartment-card__rating-star= "star"
                - let k = 5 - n
                    while k > 0                            
                        span.material-icons.appartment-card__rating-star= "star_border"
                        - k--
            .appartment-card__reviews
                span= reviews
                span.appartment-card__review= " Отзывов"



