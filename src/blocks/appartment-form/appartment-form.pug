mixin appartment-form
    .appartment-form        
        +datepicker-1f("ДАТЫ ПРЕБЫВАНИЯ В ОТЕЛЕ")                 
        +dropdown-without-butts("ГОСТИ", "Сколько гостей", "ВЗРОСЛЫЕ", "ДЕТИ", "МЛАДЕНЦЫ")
        .appartment-form__price-slider
            .appartment-form__title-wrapper
                .appartment-form__title= "ДИАПАЗОН ЦЕНЫ"
                .appartment-form__price(id = "form-price")= ""
            .slider(id = "slider")
            +checkbox-item("Стоимость за сутки пребывания в номере")(modifiers = "checkbox-item_description-price")
        .appartment-form__wrapper-checkbox-item__options
            .appartment-form__title= "CHECKBOX BUTTONS"
            +checkbox-item("Можно курить")
            +checkbox-item("Можно с питомцами")
            +checkbox-item("Можно пригласить гостей <br> (до 10 человек)")
        .appartment-form__wrapper-checkbox-item__accessibility
            .appartment-form__title= "ДОСТУПНОСТЬ"
            +checkbox-item("Широкий коридор")(modifiers = "checkbox-item_bold")
            +checkbox-item("Ширина коридоров в номере <br> не менее 91 см.")(modifiers = "checkbox-item_description")
            +checkbox-item("Помошник для инвалидов")(modifiers = "checkbox-item_bold")
            +checkbox-item("На 1 этаже вас встретит специалист <br> и проводит до номера")(modifiers = "checkbox-item_description")
        +dropdown-without-butts("УДОБСТВА НОМЕРА", "Выберите удобства", "СПАЛЬНИ", "КРОВАТИ", "ВАННЫЕ КОМНАТЫ")
        .appartment-form__wrapper-checkbox-item__more-options
            .appartment-form__dropdown-wrapper
                .appartment-form__title.appartment-form__title_dropdown= "ДОПОЛНИТЕЛЬНЫЕ УДОБСТВА"
                span.material-icons.appartment-form__expand-butt= "expand_less"
            .appartment-form__checkboxes   
                +checkbox-item("Завтрак")
                +checkbox-item("Письменный стол")
                +checkbox-item("Стул для кормления")
                +checkbox-item("Кроватка")
                +checkbox-item("Телевизор")
                +checkbox-item("Шампунь")
                