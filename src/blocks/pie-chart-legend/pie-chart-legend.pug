mixin pie-chart-legend
    .pie-chart-legend
        - var assesment = ["Великолепно", "Хорошо", "Удовлетворительно", "Разочарован"]
        - var classes = ["_great", "_good", "_normal", "_bad"]
        each item, index in assesment
            .pie-chart-legend__item            
                span(class= "pie-chart-legend__item__mark pie-chart-legend__item__mark"+classes[index])
                span(class = "pie-chart-legend__item__text")
                    = item