extends ../../ui-template
include ../../blocks/dropdown/dropdown
include ../../blocks/datepicker-2f/datepicker-2f
include ../../blocks/datepicker-1f/datepicker-1f
include ../../blocks/email/email
include ../../blocks/checkbox-item/checkbox-item
include ../../blocks/info-apartment/info-apartment
include ../../blocks/radio-button/radio-button
include ../../blocks/toggle-button/toggle-button
include ../../blocks/like-button/like-button
include ../../blocks/button-with-arrow/button-with-arrow
include ../../blocks/visitor-review/visitor-review

block content
    .ui-form-elements
        .ui-form-elements__left-col
            .ui-form-elements__text-field
                .ui-form-elements__title-text-field
                    h3= "text field"
                    h3.ui-form-elements__h3_grey= "default"
                input.text-field(type="text" placeholder="Email")
            .ui-form-elements__text-field
                .ui-form-elements__title-text-field
                    h3= "text field"
                    h3.ui-form-elements__h3_grey= "hover / focus"
                input.text-field.text-field_hover(type="text" value="This is pretty awesome")
            .ui-form-elements__dropdown-guests
                +dropdown("DROPDOWN", "Сколько гостей", "ВЗРОСЛЫЕ", "ДЕТИ", "МЛАДЕНЦЫ")
            .ui-form-elements__text-field
                .ui-form-elements__title-text-field
                    h3= "masked text field"
                    h3.ui-form-elements__h3_grey= "default"
                input.text-field(type="text" placeholder="ДД.ММ.ГГГГ")
            .ui-form-elements__datepicker-2f
                +datepicker-2f("DATE DROPDOWN", "DATE DROPDOWN")
            .ui-form-elements__datepicker-1f
                +datepicker-1f("FILTER DATE DROPDOWN")
            .ui-form-elements__email
                h3.ui-form-elements__email-h3= "subscription text field"
                +email
            .ui-form-elements__dropdown-beds
                +dropdown("DROPDOWN", "Выберите удобства", "СПАЛЬНИ", "КРОВАТИ", "ВАННЫЕ КОМНАТЫ")(type = "without butts" width = "266px")
            .ui-form-elements__dropdown-beds.js-ui-form-elements__dropdown_expanded
                +dropdown("DROPDOWN", "Выберите удобства", "СПАЛЬНИ", "КРОВАТИ", "ВАННЫЕ КОМНАТЫ")(type = "without butts" width = "266px")
            .ui-form-elements__more-options.ui-form-elements__more-options_collapsed.js-ui-form-elements__more-options_collapsed
                .apartment-form__dropdown-title
                    h3= "EXPANDABLE CHECKBOX LIST"
                    span.material-icons.apartment-form__expand-butt.apartment-form__expand-butt_rotate= "expand_less"
                .apartment-form__checkboxes.apartment-form__checkboxes_dissappear 
                    +checkbox-item("Завтрак")
                    +checkbox-item("Письменный стол")
                    +checkbox-item("Стул для кормления")
                    +checkbox-item("Кроватка")
                    +checkbox-item("Телевизор")
                    +checkbox-item("Шампунь")
                    +checkbox-item("Телевизор")
                    +checkbox-item("Шампунь")
            .ui-form-elements__more-options
                .apartment-form__dropdown-title
                    h3= "EXPANDABLE CHECKBOX LIST"
                    span.material-icons.apartment-form__expand-butt= "expand_less"
                .apartment-form__checkboxes   
                    +checkbox-item("Завтрак")
                    +checkbox-item("Письменный стол")
                    +checkbox-item("Стул для кормления")
                    +checkbox-item("Кроватка")
                    +checkbox-item("Телевизор")
                    +checkbox-item("Шампунь")
                    +checkbox-item("Телевизор")
                    +checkbox-item("Шампунь")
            .ui-form-elements__info-apartment   
                +info-apartment("insert_emoticon", "Комфорт", "Шумопоглощающие стены")
                +info-apartment("location_city", "Удобство", "Окно в каждой из спален")(type = "with border")
        .ui-form-elements__middle-right-col
            .ui-form-elements__middle-col
                .ui-form-elements__checkbox-buttons
                    h3.ui-form-elements__checkbox-buttons-h3= "CHECKBOX BUTTONS"
                    +checkbox-item("Можно курить")
                    +checkbox-item("Можно с питомцами")
                    +checkbox-item("Можно пригласить гостей <br> (до 10 человек)")
                .ui-form-elements__radio-buttons-block
                    h3= "radio buttons"
                    .ui-form-elements__radio-buttons
                        +radio-button("gender", "Мужчина")
                        +radio-button("gender", "Женщина")
                .ui-form-elements__toggle-buttons
                    h3.ui-form-elements__toggle-buttons-title= "toggle"
                    .ui-form-elements__toggle-button
                        +toggle-button
                        p.ui-form-elements__toggle-button-text= "Получать спецпредложения"
                    .ui-form-elements__toggle-button
                        +toggle-button
                        p.ui-form-elements__toggle-button-text= "Получать спецпредложения"
                .ui-form-elements__like-buttons-block
                    h3.ui-form-elements__like-buttons-title= "like button"
                    .ui-form-elements__like-buttons
                        .ui-form-elements__like-button
                            +like-button("", 2)
                        .ui-form-elements__like-button
                            +like-button("_active", 12)
                .ui-form-elements__rate-button
                    h3= "rate button"
                    .ui-form-elements__stars-block
                        .ui-form-elements__stars
                            span.material-icons.ui-form-elements__star= "star"
                            span.material-icons.ui-form-elements__star= "star"
                            span.material-icons.ui-form-elements__star= "star"
                            span.material-icons.ui-form-elements__star= "star"
                            span.material-icons.ui-form-elements__star= "star_border"
                        .ui-form-elements__stars
                            span.material-icons.ui-form-elements__star= "star"
                            span.material-icons.ui-form-elements__star= "star"
                            span.material-icons.ui-form-elements__star= "star"
                            span.material-icons.ui-form-elements__star= "star"
                            span.material-icons.ui-form-elements__star= "star"
                .ui-form-elements__dropdown-guests-expanded.js-ui-form-elements__dropdown_expanded
                    +dropdown("DROPDOWN", "Сколько гостей", "ВЗРОСЛЫЕ", "ДЕТИ", "МЛАДЕНЦЫ")
                .ui-form-elements__rich-checkbox-buttons
                    h3.ui-form-elements__rich-checkbox-buttons-title= "RICH CHECKBOX BUTTONS"
                    +checkbox-item("Широкий коридор")(style = "bold")
                    .apartment-form__checkbox-description!= "Ширина коридоров в номере <br> не менее 91 см."
                    +checkbox-item("Помошник для инвалидов")(style = "bold")
                    .apartment-form__checkbox-description!= "На 1 этаже вас встретит специалист <br> и проводит до номера"
            .ui-form-elements__right-col
                .ui-form-elements__slider
                    .apartment-form__price-slider
                        .apartment-form__title-wrapper
                            h3.ui-form-elements__apartment-form-title= "RANGE SLIDER"
                            .apartment-form__price(id = "form-price")= ""
                        .slider(id = "slider")
                .ui-form-elements__buttons
                    h3= "buttons"
                    .ui-form-elements__buttons-row.ui-form-elements__buttons-row_violet
                        .button.button_violet.button_for-ui= "CLICK ME"
                        .ui-form-elements__button_hover
                            .button.button_violet.button_for-ui= "CLICK ME"
                    .ui-form-elements__buttons-row
                        .button.button_for-ui= "CLICK ME"
                        .ui-form-elements__button_hover
                            .button.button_for-ui= "CLICK ME"
                    .ui-form-elements__buttons-row.ui-form-elements__buttons-row_last
                        .ui-form-elements__button-without
                            h3.ui-form-elements__button-without-text= "CLICK ME"
                        .ui-form-elements__button-without
                            h3.ui-form-elements__button-without-text.ui-form-elements__button-without-text_hover= "CLICK ME"
                    .ui-form-elements__button-with-arrow
                        +button-with-arrow("ПЕРЕЙТИ К ОПЛАТЕ")
                .ui-form-elements__pagination
                    h3= "pagination"
                    .search-room__pages
                        button.search-room__button.search-room__button_violet= 1
                        button.search-room__button= 2
                        button.search-room__button= 3
                        button.search-room__button= "..."
                        button.search-room__button= 15                
                        button.material-icons.search-room__button.search-room__button_green= "arrow_forward"
                    .search-room__pages-comment= "1 – 12 из 100+ вариантов аренды"
                .ui-form-elements__dropdown-guests-expanded2.js-ui-form-elements__dropdown_expanded
                    +dropdown("DROPDOWN", "Сколько гостей", "ВЗРОСЛЫЕ", "ДЕТИ", "МЛАДЕНЦЫ")
                .ui-form-elements__bullet-list
                    .room-details__additional
                        .room-details__rules
                            h3.ui-form-elements__rules-title BULLET LIST
                            ul.room-details__rules-ul
                                li.room-details__rules-ul-li
                                    div= "Нельзя с питомцами"
                                li.room-details__rules-ul-li 
                                    div= "Без вечеринок и мероприятий"
                                li.room-details__rules-ul-li 
                                    div= "Время прибытия — после 13:00, а выезд до 12:00"
            .ui-form-elements__reviews
                .ui-form-elements__reviews-title
                    - var text1 = "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару – никто не жаловался из соседей."                        
                    +visitor-review ("_active", "images/users/1.jpg", "Мурад Сарафанов", "5 дней назад", "12", text1)                    
